<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    loading dialog-->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="xToolbarDivider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/x_divider</item>
    </style>

    <style name="xDividerMarge12DP">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/x_divider</item>
    </style>

    <style name="ToolBarTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/x_text_01</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/x_text_03</item>
    </style>

    <style name="SecTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/x_text_01</item>
    </style>

    <style name="SubTitleStyleBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/x_text_01</item>
    </style>

    <!--    主题实心色按钮-->
    <style name="NoInsetThemeButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">52dp</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_dialog_bg</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Widget.Theme.ServiceManagerSystem.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ServiceManagerSystem.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="toolbar_layout_coll_title_style" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toolbar_layout_ex_title_style" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tabTextStyleNormal">
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">700</item>
    </style>

    <!--    通用的tab样式-->
    <style name="tabStyleNormal" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/x_text_03</item>
        <item name="tabSelectedTextColor">@color/purple_700</item>
        <item name="tabTextAppearance">@style/tabTextStyleNormal</item>
        <item name="elevation">0dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorColor">@color/purple_700</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">auto</item>
    </style>
</resources>
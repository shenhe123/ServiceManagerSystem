<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/svg_back"
        app:title="新增用户"
        app:titleCentered="true"
        app:titleTextColor="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toTopOf="@id/mbt_submit">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="56dp"
            app:divider="@color/x_divider"
            app:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="用户名"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_nickname"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="手机号"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_phone_num"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="密码"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="身份证号"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_card_id"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="居住地址"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="有效期"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_expired_date"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:hint="请选择有效期"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_roles_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1.2"
                    android:text="角色信息"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/layout_roles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    app:flChildSpacing="12dp"
                    app:flRowSpacing="12dp">


                </com.nex3z.flowlayout.FlowLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_factory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="工厂信息"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/as_factory"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dept"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1.2"
                    android:text="部门信息"
                    android:textColor="@color/x_text_03"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/as_dept"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="5"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/x_text_01"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:minHeight="56dp"
        android:text="提交"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

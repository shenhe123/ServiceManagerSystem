<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toTopOf="@id/mbt_submit"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/purple_700"
            android:fitsSystemWindows="true"
            app:elevation="1px">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextAppearance="@style/toolbar_layout_coll_title_style"
                app:expandedTitleMarginBottom="20dp"
                app:expandedTitleMarginStart="22dp"
                app:expandedTitleTextAppearance="@style/toolbar_layout_ex_title_style"
                app:title="新增用户"
                app:toolbarId="@+id/toolbar">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/svg_back">

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="56dp"
                app:divider="@color/x_divider"
                app:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="用户名："
                        android:textColor="@color/x_text_03"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_nickname"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_input_stroke"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="手机号："
                        android:textColor="@color/x_text_03"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_phone_num"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/selector_input_stroke"
                        android:inputType="phone"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="密码:"
                        android:textColor="@color/x_text_03"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_input_stroke"
                        android:inputType="textPassword"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="身份证号："
                        android:textColor="@color/x_text_03"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_card_id"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/selector_input_stroke"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="现居住地址："
                        android:textColor="@color/x_text_03"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_address"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_input_stroke"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="有效期："
                        android:textColor="@color/x_text_03"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expired_date"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_input_stroke"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:hint="请选择有效期"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:text="角色信息："
                        android:textColor="@color/x_text_03"
                        android:textSize="16sp" />

                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/layout_roles"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:flChildSpacing="12dp"
                        app:flRowSpacing="12dp">


                    </com.nex3z.flowlayout.FlowLayout>


                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:minHeight="56dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

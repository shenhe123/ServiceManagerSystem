<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_user_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="用户名"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_user_name_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名"
                android:visibility="invisible"
                android:layout_toEndOf="@id/tv_user_name_title"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_user_name_title2"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_user_name_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_user_name"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_nick_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="姓名"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_nick_name_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:visibility="invisible"
                android:layout_toEndOf="@id/tv_nick_name_title"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_nick_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_nick_name_title2"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_nick_name_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_nick_name"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_phone_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="手机号"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_phone_num_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名"
                android:visibility="invisible"
                android:layout_toEndOf="@id/tv_phone_num_title"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_phone_num"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:inputType="phone"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_phone_num_title2"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_phone_num_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_phone_num"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_user_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_user_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="用户类型"
                android:layout_centerVertical="true"/>

            <RadioGroup
                android:id="@+id/rg_user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_toEndOf="@id/tv_user_type_title"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_third"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="三方用户"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_factory"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="工厂用户"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_system"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="集团用户"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_user_factory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_user_factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="所属工厂"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_user_factory"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_user_factory"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_user_factory_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_user_factory"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_expired_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_expired_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="有效日期"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_expired_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:text="请选择日期"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/selector_input_stroke"/>

                <ImageView
                    android:id="@+id/iv_expired_start_date_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_close"
                    android:padding="6dp"
                    android:layout_alignEnd="@id/tv_expired_start_date"
                    android:layout_centerVertical="true"
                    app:tint="@color/ps_color_light_grey"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_expired_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="8dp"
                    android:text="请选择日期"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_input_stroke"/>

                <ImageView
                    android:id="@+id/iv_expired_end_date_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_close"
                    android:padding="6dp"
                    android:layout_alignEnd="@id/tv_expired_end_date"
                    android:layout_centerVertical="true"
                    app:tint="@color/ps_color_light_grey"
                    android:visibility="gone"/>
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:id="@+id/layout_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_creator_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="创建人"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_creator_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_creator_title"
                android:text="人"
                android:visibility="invisible"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_creator"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/tv_creator_title2"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_creator_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_creator"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_creator_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_creator_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="创建日期"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_creator_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:text="请选择日期"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/selector_input_stroke"/>

                <ImageView
                    android:id="@+id/iv_creator_start_date_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_close"
                    android:padding="6dp"
                    android:layout_alignEnd="@id/tv_creator_start_date"
                    android:layout_centerVertical="true"
                    app:tint="@color/ps_color_light_grey"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_creator_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="8dp"
                    android:text="请选择日期"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_input_stroke"/>

                <ImageView
                    android:id="@+id/iv_creator_end_date_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_close"
                    android:padding="6dp"
                    android:layout_alignEnd="@id/tv_creator_end_date"
                    android:layout_centerVertical="true"
                    app:tint="@color/ps_color_light_grey"
                    android:visibility="gone"/>
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="查询"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>
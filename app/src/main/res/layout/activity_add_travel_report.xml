<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.travelreport.AddTravelReportActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        app:navigationIcon="@drawable/svg_back"
        app:title="新增出差报告"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:divider="@color/x_divider"
            app:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="出差人员"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_apply_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_apply_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="同行人"
                    android:textColor="@color/x_text_03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/trans" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_partner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_partner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="申请部门"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/as_dept"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="申请工厂"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_apply_factory"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/as_factory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="客户名称"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_client_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_client_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="产品编码"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_product_code"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_product_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="项目编码"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_project_code"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_project_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="出差地点"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_place_from"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_input_stroke"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="到"
                        android:textColor="@color/x_text_03" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_place_to"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_input_stroke"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="单位地址"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="起始时间"
                    android:textColor="@color/x_text_03" />

                <TextView
                    android:id="@+id/et_start_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="center_vertical"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="终止时间"
                    android:textColor="@color/x_text_03" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_end_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_input_stroke">

                    <TextView
                        android:id="@+id/et_end_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/x_text_01"
                        android:textSize="16sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:text="出差目的"
                    android:textColor="@color/x_text_03"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="12dp"
                    android:lines="3"
                    android:background="@drawable/selector_input_stroke"
                    android:gravity="top|start"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:text="主要工作"
                    android:textColor="@color/x_text_03"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_main_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="12dp"
                    android:lines="3"
                    android:gravity="top|start"
                    android:background="@drawable/selector_input_stroke"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:text="预期结果"
                    android:textColor="@color/x_text_03"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_expected_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="12dp"
                    android:lines="3"
                    android:gravity="top|start"
                    android:background="@drawable/selector_input_stroke"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:text="待办事项"
                    android:textColor="@color/x_text_03"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="12dp"
                    android:lines="3"
                    android:gravity="top|start"
                    android:background="@drawable/selector_input_stroke"
                    android:textColor="@color/x_text_01"
                    android:textSize="16sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbt_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="保存"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbt_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="提交"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
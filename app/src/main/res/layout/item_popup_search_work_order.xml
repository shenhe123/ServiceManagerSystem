<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_apply_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_apply_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="申请人"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_apply_name_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:visibility="invisible"
                android:layout_toEndOf="@id/tv_apply_name_title"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_apply_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_apply_name_title2"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_apply_name_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_apply_name"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_tel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="联系方式"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_tel"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:inputType="phone"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_tel_title"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_tel_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_tel"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_product_desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="产品名称"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_product_desc"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_product_desc_title"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_product_desc_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_product_desc"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_product_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_product_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="产品编码"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_product_code"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/tv_product_code_title"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_product_code_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_product_code"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_apply_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_apply_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="申请日期"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:text="请选择日期"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/selector_input_stroke"/>

                <ImageView
                    android:id="@+id/iv_start_date_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_close"
                    android:padding="6dp"
                    android:layout_alignEnd="@id/tv_start_date"
                    android:layout_centerVertical="true"
                    app:tint="@color/ps_color_light_grey"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="8dp"
                    android:text="请选择日期"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_input_stroke"/>

                <ImageView
                    android:id="@+id/iv_end_date_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_close"
                    android:padding="6dp"
                    android:layout_alignEnd="@id/tv_end_date"
                    android:layout_centerVertical="true"
                    app:tint="@color/ps_color_light_grey"
                    android:visibility="gone"/>
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_order_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="工单编号"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_order_id"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_order_id_title"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_order_id_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_order_id"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_factory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_factory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="所属工厂"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_factory"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="36dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_factory_title"
                android:background="@drawable/selector_input_stroke"/>

            <ImageView
                android:id="@+id/iv_factory_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_close"
                android:padding="6dp"
                android:layout_alignEnd="@id/et_factory"
                android:layout_centerVertical="true"
                app:tint="@color/ps_color_light_grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_check_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_check_state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="排查状态"
                android:layout_centerVertical="true"/>

            <RadioGroup
                android:id="@+id/rg_check_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_toEndOf="@id/tv_check_state_title"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_start"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="未开始"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_checking"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="排查中"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_finish"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="已完成"/>
            </RadioGroup>
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="查询"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#80000000"/>
</androidx.appcompat.widget.LinearLayoutCompat>
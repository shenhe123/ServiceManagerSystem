<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人中心"
        app:titleCentered="true"
        app:title="个人中心"
        app:titleTextColor="@color/white"
        android:background="@color/purple_700"/>


    <View style="@style/xToolbarDivider" />

    <TextView
        android:id="@+id/tv_profile_info"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="个人信息"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_person"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_update_password"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="修改密码"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_password"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_menu_setting"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="菜单设置"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_menu_book"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_option_logs"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="操作日志"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_record_voice"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_system_setting"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="系统管理"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbt_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="退出登录"/>

</androidx.appcompat.widget.LinearLayoutCompat>
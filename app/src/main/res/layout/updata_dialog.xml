<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:minWidth="@dimen/dialog_width"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/version_bg_black"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="124dp">

        <TextView
            android:layout_marginTop="26dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="发现新版本"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_marginStart="20dp"
            tools:text="Version 2.5.5"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_update"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/x_text_01"
            android:minHeight="40dp"
            android:layout_marginBottom="-16dp"
            tools:text="1.优化性能\n2.优化性能优化性能优化性能优化性能优化性能优化性能\n"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="textCapWords"
            android:letterSpacing="0.016"
            android:text="立即升级"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_update_error_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="无法升级？请点击此处"
            android:textSize="12sp"
            android:textColor="@color/text_600"/>


    </LinearLayout>
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:tint="@color/white"
        android:src="@drawable/svg_close" />

</LinearLayout>
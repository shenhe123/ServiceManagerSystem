<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleCentered="true"
        app:title="系统管理"
        app:navigationIcon="@drawable/svg_back"
        app:titleTextColor="@color/white"
        android:background="@color/purple_700"/>


    <View style="@style/xToolbarDivider" />

    <TextView
        android:id="@+id/tv_user_manager"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="用户管理"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_person"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_logs_manager"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="日志管理"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_record_voice"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_network_manager"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="网络管理"
        android:textColor="@color/x_text_01"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/svg_arrow_right"
        app:drawableStartCompat="@drawable/svg_network"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableTint="@color/x_text_01" />

    <View
        style="@style/xToolbarDivider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
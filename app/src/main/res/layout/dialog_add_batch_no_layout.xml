<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="@dimen/dialog_width"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/svg_close"
            app:tint="@color/x_text_03" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="添加批次号"
            android:textColor="@color/x_text_01"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="36dp"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/selector_input_stroke"
            android:textColor="@color/x_text_01"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_content_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="36dp"
            android:scaleType="center"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/svg_close"
            app:tint="@color/x_text_03"
            android:alpha="0.8"
            android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbt_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="@string/app_confirm"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>